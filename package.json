{
	"name": "sketch-nudge-text",
	"description": "Quickly nudge text between font sizes, weights, and colours",
	"version": "1.0.1",
	"engines": {
		"sketch": ">=49.0"
	},
	"skpm": {
		"name": "sketch-nudge-text",
		"manifest": "src/manifest.json",
		"main": "sketch-nudge-text.sketchplugin",
		"assets": [
			"assets/**/*"
		],
		"sketch-assets-file": "sketch-assets/icons.sketch"
	},
	"scripts": {
		"build": "skpm-build",
		"watch": "skpm-build --watch",
		"start": "skpm-build --watch --run",
		"postinstall": "npm run build && skpm-link"
	},
	"devDependencies": {
		"@skpm/builder": "^0.9.5"
	},
	"dependencies": {
		"@lewishowles/helpers": "^0.2.0"
	}
}
